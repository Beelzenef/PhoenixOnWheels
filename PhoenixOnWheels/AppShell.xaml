<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PhoenixOnWheels.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PhoenixOnWheels"
    xmlns:views="clr-namespace:PhoenixOnWheels.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Vehicles">
            <ShellContent Title="Vehiculos" ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>
        <Tab Title="Identidades">
            <ShellContent Title="Red list" ContentTemplate="{DataTemplate views:MainPage}" />
            <ShellContent Title="Black list" ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>
        <Tab Title="Rents">
            <ShellContent Title="All rents" ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>
    </TabBar>

</Shell>
