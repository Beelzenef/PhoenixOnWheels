<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoenixOnWheels.Views.VehiclePage">

    <Shell.SearchHandler>
        <SearchHandler Placeholder="Search criteria"/>
    </Shell.SearchHandler>


        <CollectionView Grid.Row="2"
                        Grid.ColumnSpan="2">
                <CollectionView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Person 1</x:String>
                        <x:String>Person 2</x:String>
                        <x:String>Person 3</x:String>
                        <x:String>Person 4</x:String>
                        <x:String>Person 5</x:String>
                    </x:Array>
                </CollectionView.ItemsSource>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="0,5">
                            <Frame>
                                <Label Text="{Binding .}"
                                               FontSize="20"/>
                            </Frame>
                        </Grid>
                </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

</ContentPage>
